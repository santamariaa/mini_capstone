<h1> Add a new recipe</h1>

<%= form_tag '/products', method: :post do %>
    
    <div>
    <%=label_tag :name %>
    <%= text_field_tag :name%>
    </div>

    <div>
    <%=label_tag :price %>
    <%=text_field_tag :price %>
    </div>

    <div>
    <%=label_tag :directions %>
    <%=text_field_tag :directions %>
    </div>

    <%= submit_tag "Punch It" %>

<% end %>