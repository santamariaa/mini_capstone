<h1><%= @product.name %></h1>
<h2>Price: <%= @product.price %></h2>
<h2><%= @product.sale_message %> </h2>
<h2>Tax: <%= @product.tax %> </h2>
<h2>Total: <%= @product.total %> </h2>
<h2> Supplier: <%= @product.supplier.name %> </h2>

<h2><img src="<%= @product.images%>" height="100px" width="100px"></h2>
<h2><%= @product.description %></h2>

<%= form_tag '/orders', method: :post do %>
    
    <div>
    <%=label_tag :quantity %>
    <%= text_field_tag :quantity%>
    </div>

     <div>
    <%=label_tag :product_id %>
    <%= text_field_tag :product_id, @product.id%>
    </div>

     <%= submit_tag "Buy Now" %>
<% end %>

<%= link_to "Home", "/" %>
<%= link_to "Edit", "/products/#{@product.id}/edit"%>
<%= link_to "Delete", "/products/#{@product.id}",
method: :delete, data:{confirm: "Are you sure?"} %>