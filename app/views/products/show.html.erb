
<h1><%= @product.name %></h1>
<h2>Price: <%= number_to_currency(@product.price) %></h2>
<h2><%= @product.sale_message %> </h2>
<h2>Tax: <%= number_to_currency(@product.tax) %> </h2>
<h2>Total: <%= number_to_currency(@product.total) %> </h2>
<h2> Supplier: <%= @product.supplier.name %> </h2>

<h1>Category<% @product.categories.each do |category| %></h1><%= category.name %>

<% end %>

<h2><img src="<%= @product.images[0].image_url %>" height="100px" width="100px"></h2>
<h2><%= @product.description %></h2>

<%= form_tag '/carted_products', method: :post do %>
    
    <div>
    <%=label_tag :quantity %>
    <%= text_field_tag :quantity%>
    </div>

     <div>

    <%= hidden_field_tag :product_id, @product.id%>
    </div>

     <%= submit_tag "Add to Cart" %>
<% end %>

<%= link_to "Home", "/" %>
<%= link_to "Edit", "/products/#{@product.id}/edit"%>
<%= link_to "Delete", "/products/#{@product.id}",
method: :delete, data:{confirm: "Are you sure?"} %>